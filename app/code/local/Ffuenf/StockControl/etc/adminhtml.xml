<config>
    <menu>
        <catalog>
            <children>
                <stockcontrol translate="title" module="ffuenf_stockcontrol">
                    <title>Manage Stock</title>
                    <action>adminhtml/stockcontrol</action>
                </stockcontrol>
            </children>
        </catalog>
    </menu>
    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <children>
                    <catalog>
                        <children>
                            <stockcontrol translate="title" module="ffuenf_stockcontrol">
                                <title>Manage Stock</title>
                                <sort_order>10</sort_order>
                            </stockcontrol>
                        </children>
                    </catalog>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <stockcontrol translate="title" module="ffuenf_stockcontrol">
                                        <title>StockControl</title>
                                    </stockcontrol>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
</config>
