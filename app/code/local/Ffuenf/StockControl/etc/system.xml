<config>
    <tabs>
      <ffuenf>
        <label>ffuenf</label>
        <sort_order>508</sort_order>
      </ffuenf>
    </tabs>
    <sections>
        <stockcontrol translate="label" module="ffuenf_stockcontrol">
            <label>StockControl</label>
            <tab>ffuenf</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="ffuenf_stockcontrol">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enabled translate="label" module="ffuenf_stockcontrol">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <change_status translate="label" module="ffuenf_stockcontrol">
                            <label>Auto Update Stock Status When Qty is Changed?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </change_status>
                        <sort_by translate="label" module="ffuenf_stockcontrol">
                            <label>Default Sort By</label>
                            <frontend_type>select</frontend_type>
                            <source_model>stockcontrol/source_sort</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </sort_by>
                        <order translate="label" module="ffuenf_stockcontrol">
                            <label>Default Sort Order</label>
                            <frontend_type>select</frontend_type>
                            <source_model>stockcontrol/source_order</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </order>
                        <inline_edit translate="label" module="ffuenf_stockcontrol">
                            <label>Enable Inline Editing of Stock Inventory</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </inline_edit>
                    </fields>
                </general>
            </groups>
        </stockcontrol>
    </sections>
</config>